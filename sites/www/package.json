{
	"name": "mcpfile-docs",
	"description": "MCP File documentation site",
	"private": true,
	"type": "module",
	"scripts": {
		"copy-raw-docs": "mkdir -p public/raw-docs && cp content/docs/*.mdx content/docs/meta.json public/raw-docs/",
		"dev": "npm run copy-raw-docs && vite dev",
		"build": "npm run copy-raw-docs && vite build",
		"deploy": "npm run build && wrangler deploy",
		"cf-typegen": "wrangler types",
		"typecheck": "tsc -b",
		"preview": "vite preview"
	},
	"dependencies": {
		"@orama/orama": "^3.1.16",
		"@tailwindcss/typography": "^0.5.19",
		"cookie": "^0.7.2",
		"fumadocs-core": "^16.0.7",
		"fumadocs-ui": "^16.0.7",
		"hono": "^4.8.2",
		"lucide-react": "^0.552.0",
		"react": "^19.1.0",
		"react-dom": "^19.2.0",
		"react-router": "^7.9.5",
		"react-router-dom": "^7.9.5",
		"set-cookie-parser": "^2.7.2"
	},
	"devDependencies": {
		"@cloudflare/vite-plugin": "^1.13.19",
		"@cloudflare/workers-types": "^4.20250409.0",
		"@tailwindcss/vite": "^4.1.16",
		"@types/node": "^24.0.4",
		"@types/react": "^19.1.0",
		"@types/react-dom": "^19.1.2",
		"@vitejs/plugin-react": "^5.1.0",
		"fumadocs-mdx": "^13.0.0",
		"tailwindcss": "^4.1.3",
		"typescript": "^5.8.3",
		"vite": "^7.2.0",
		"wrangler": "^4.9.1"
	}
}
